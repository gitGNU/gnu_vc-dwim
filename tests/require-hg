# -*- sh -*-
have_hg=1
hg_version=`(hg --version) 2> /dev/null | sed 1q`
if test $? != 0; then
  have_hg=0
else
  case $hg_version in
    "Mercurial Distributed SCM (version 0.9"*) ;;
    "Mercurial Distributed SCM (version "[a-f1-9]*) ;;
    *) have_hg=0 ;;
  esac
fi

test $have_hg = 0 &&
  {
    echo "$0: skipping this test, since you lack hg" 1>&2
    (exit 77); exit 77
  }
