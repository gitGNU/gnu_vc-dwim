# -*- sh -*-
have_git=1
git_version=$(git --version)
if test $? != 0; then
  have_git=0
else
  case $git_version in
    "git version "1.[3-9]*) ;;
    "git version "2*) ;;
    *) have_git=0 ;;
  esac
fi

test $have_git = 0 &&
  {
    echo "$0: skipping this test, since you lack git" 1>&2
    (exit 77); exit 77
  }
