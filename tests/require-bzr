# -*- sh -*-
have_bzr=1
bzr_version=`(bzr --version) 2> /dev/null | sed 1q`
if test $? != 0; then
  have_bzr=0
else
  case $bzr_version in
    "Bazaar (bzr) "1.[3-9]*) ;;
    "Bazaar (bzr) "[2-9]*) ;;
    *) have_bzr=0 ;;
  esac
fi

test $have_bzr = 0 &&
  {
    echo "$0: skipping this test, since you lack bzr" 1>&2
    (exit 77); exit 77
  }
